alias ..='cd ..'
alias g='git'
alias gvim='vim -p'
alias v='vim -p'
alias l='lein'
alias lr='lein repl'
alias senv='source .env'
alias r='rails'
alias tmux='TERM=screen-256color-bce tmux -2'
alias dockerip="docker inspect --format '{{ .NetworkSettings.IPAddress}}'"
alias gp='git push'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias rubyv='rvm --ruby-version --create use'
alias es='emacsclient -c -a ""'
alias gco='git clone git@github.com:'
alias dkc='docker-compose'
alias s!!='sudo !!'

if [ `uname` == "Linux" ]; then
   alias la='ls -al --color=auto'
   alias ls='ls --color=auto'
   alias grep='grep --color=auto'
   alias fgrep='fgrep --color=auto'
   alias egrep='egrep --color=auto'
fi

if [ `uname` == "Darwin" ]; then
   alias la='gls -al --color=auto'
   alias ls='gls --color=auto'
   alias grep='ggrep --color=auto'
   alias fgrep='gfgrep --color=auto'
   alias egrep='gegrep --color=auto'
fi
